<h1>Add a new user:</h1>

<%= form_for [@user] do |f| %>

<%= f.label :display_name %>
<%= f.text_field :display_name %>

<%= f.label :first_name %>
<%= f.text_field :first_name %>

<%= f.label :last_name %>
<%= f.text_field :last_name %>
<%= f.label :age %>
<%= f.number_field :age %>

<%= f.label :email %>
<%= f.text_field :email %>
<%= f.label :email_list, 'Yes' %>
